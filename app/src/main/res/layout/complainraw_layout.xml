<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/compraw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person Name"
        android:textSize="20dp"
        android:textColor="#0b0b0b"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/compraw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="20dp"
        android:textColor="#0b0b0b"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/compraw1"
        android:layout_alignStart="@+id/compraw1" />

    <TextView
        android:id="@+id/compraw3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complaint Type"
        android:textSize="20dp"
        android:textColor="#0b0b0b"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/compraw2"
        android:layout_alignStart="@+id/compraw2" />

    <TextView
        android:id="@+id/compraw4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        android:textColor="#0b0b0b"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/compraw3"
        android:layout_alignStart="@+id/compraw3" />
</RelativeLayout>
