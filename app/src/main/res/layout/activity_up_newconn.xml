<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="#15f4ee"
    tools:context="com.example.mi.muncipality.up_newconn">

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtstaname"
        android:hint="Name"
        android:textColorHint="#FF111212"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtstacontact" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:textColorHint="#FF111212"
        android:id="@+id/txtstacontact"
        android:hint="Contact"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/txtstaname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtstatype"
        android:hint="Type"
        android:textColorHint="#FF111212"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/txtstacontact"
        android:layout_alignStart="@+id/txtstacontact" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtstadis"
        android:textColorHint="#FF111212"
        android:hint="Description"
        android:layout_below="@+id/txtstatype"
        android:layout_alignStart="@+id/txtstacontact"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtstastatus"
        android:hint="Add Status"
        android:textColorHint="#FF111212"
        android:layout_below="@+id/txtstadis"
        android:layout_alignStart="@+id/txtstadis"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textSize="15dp"
        android:background="#F18D9E"
        android:id="@+id/btnaddcom"
        android:onClick="run"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/txtstastatus"
        android:layout_alignStart="@+id/txtstastatus"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:background="#F18D9E"
        android:textSize="15dp"
        android:id="@+id/btncancel"
        android:layout_marginEnd="19dp"
        android:layout_alignBaseline="@+id/btnaddcom"
        android:layout_alignBottom="@+id/btnaddcom"
        android:layout_alignEnd="@+id/txtstastatus" />

</RelativeLayout>
