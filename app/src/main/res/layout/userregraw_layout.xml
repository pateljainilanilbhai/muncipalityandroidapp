<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/userregtxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:textColor="#060606"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/usertxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#060606"
        android:textSize="20dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/userregtxt1"
        android:layout_alignStart="@+id/userregtxt1" />

    <TextView
        android:id="@+id/usertxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="20dp"
        android:textColor="#060606"
        android:layout_below="@+id/usertxt2"
        android:layout_alignStart="@+id/usertxt2"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/usertxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="20dp"
        android:textColor="#060606"
        android:layout_below="@+id/usertxt3"
        android:layout_alignStart="@+id/usertxt3"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/usertxt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Number"
        android:textSize="20dp"
        android:textColor="#060606"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/usertxt4"
        android:layout_alignStart="@+id/usertxt4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usertxt3"
        android:layout_below="@+id/usertxt5"
        android:layout_marginTop="43dp"
        android:text="TextView"
        android:textSize="30dp"
        android:textColor="#ddf"/>

</RelativeLayout>
